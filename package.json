{
  "name": "@mkabumattar/hello-world-api",
  "description": "Hello, World! in All Languages Programming API",
  "type": "module",
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Mohammad Abu Mattar",
    "email": "mohammad.khaled@outlook.com",
    "url": "https://mkabumattar.github.io/"
  },
  "homepage": "https://github.com/MKAbuMattar/hello-world-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MKAbuMattar/hello-world-api.git"
  },
  "bugs": {
    "url": "https://github.com/MKAbuMattar/hello-world-api/issues"
  },
  "scripts": {
    "dev": "tsx watch --ignore 'src/generated/**' --clear-screen=false src/bin/www.ts",
    "build:api": "tsx src/scripts/tsoa.script.ts",
    "build": "rimraf dist && tsoa spec-and-routes && tsup --tsconfig tsconfig.json",
    "start": "node ./dist/bin/www.js",
    "clean": "rimraf dist coverage",
    "lint": "biome check ./src",
    "lint:fix": "biome check --fix ./src",
    "fmt": "biome format ./src",
    "fmt:fix": "biome format --write ./src",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@tsoa/cli": "6.6.0",
    "@tsoa/runtime": "6.6.0",
    "axios": "1.12.2",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "envalid": "8.1.0",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "mongoose": "8.19.2",
    "node-cron": "4.2.1",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "pino-pretty": "13.1.2",
    "pino-transport-rotating-file": "1.2.0",
    "swagger-ui-express": "5.0.1",
    "tsoa": "6.6.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/compression": "1.8.1",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.4",
    "@types/lint-staged": "14.0.0",
    "@types/node": "24.9.1",
    "@types/node-cron": "3.0.11",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "lint-staged": "16.2.6",
    "rimraf": "6.0.1",
    "supertest": "7.1.4",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "pnpm@10.19.0"
}
